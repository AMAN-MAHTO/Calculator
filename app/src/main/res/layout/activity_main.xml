<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/Button_C"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="C"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@id/Button_left_brac"

                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="("
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_right_brac"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text=")"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_plus"
                style="@style/buttonspeciallayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="+"
                android:textAllCaps="false"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@id/Button_1"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="1"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button

                android:id="@+id/Button_2"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="2"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_3"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="3"
                android:textAllCaps="false"
                android:textSize="32sp"
                tools:ignore="DuplicateIds" />

            <android.widget.Button
                android:id="@+id/Button_minus"
                style="@style/buttonspeciallayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="-"
                android:textAllCaps="false"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/Button_4"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="4"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button

                android:id="@+id/Button_5"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="5"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_6"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="6"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_multiply"
                style="@style/buttonspeciallayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="*"
                android:textAllCaps="false"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button

                android:id="@+id/Button_7"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="7"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button


                android:id="@+id/Button_8"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="8"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_9"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="9"
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_division"
                style="@style/buttonspeciallayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="/"
                android:textAllCaps="false"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button

                android:id="@+id/Button_AC"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:text="AC"
                android:textAllCaps="false"
                android:textColor="@color/themeColor"
                android:textSize="32sp" />

            <android.widget.Button

                android:id="@+id/Button_0"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text="0"
                android:textAllCaps="false"
                android:textSize="32sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <android.widget.Button


                android:id="@+id/Button_dot"
                style="@style/buttonnumberlayout"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text="."
                android:textAllCaps="false"
                android:textSize="32sp" />

            <android.widget.Button
                android:id="@+id/Button_equal"
                style="@style/buttonspeciallayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:onClick="onClick"
                android:text="="
                android:textAllCaps="false"
                android:textSize="32sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textSize="80sp"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="24sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0" />

    <TextView
        android:id="@+id/textViewInput"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textColor="@color/themeColor"
        android:textSize="34sp"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/textViewAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>